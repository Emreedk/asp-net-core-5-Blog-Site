@model BlogProject_EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @Html.Label("Konu")
            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
            @Html.Label("Mesaj Detayı")
            @Html.TextAreaFor(x => x.MessageDetails,20,15, new { @class = "form-control" })
            <a href="/Message/InBox" class="btn btn-success">Mesajlara Dön</a>
        </div>
    </div>
</div>

