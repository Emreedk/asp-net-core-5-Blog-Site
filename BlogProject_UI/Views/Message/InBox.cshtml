@using BlogProject_EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th>Konu</th>
                        <th>Gönderen</th>
                        <th>Tarih</th>
                        <th></th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <th>@item.Id</th>
                            <td>@item.Subject</td>
                            <td>@item.SenderId</td>
                            <td>@item.MessageDate.ToShortDateString()</td>
                            <td><a href="/Message/MessageDetails/@item.Id" class="btn btn-warning">Mesajı Aç</a></td>
                        </tr>
                    </tbody>
                }
            </table>
            <a href="/Blog/BlogAdd" class="btn btn-success">Yeni Mesaj Oluştur</a>
        </div>
    </div>
</div>

